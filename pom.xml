<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
          http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.futurewl</groupId>
    <artifactId>backend-java-samples</artifactId>
    <version>190703</version>
    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.compilerVersion>1.8</maven.compiler.compilerVersion>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- spring boot version -->
        <spring-boot-1-5-x.version>1.5.21.RELEASE</spring-boot-1-5-x.version>
        <spring-boot-2-0-x.version>2.0.9.RELEASE</spring-boot-2-0-x.version>
        <spring-boot-2-1-x.version>2.1.6.RELEASE</spring-boot-2-1-x.version>
        <!-- spring cloud greenwich version -->
        <spring-cloud-greenwich.version>Greenwich.SR2</spring-cloud-greenwich.version>
        <spring-cloud-greenwich-spring-boot.version>${spring-boot-2-1-x.version}</spring-cloud-greenwich-spring-boot.version>
        <!-- spring cloud finchley version -->
        <spring-cloud-finchley.version>Finchley.SR3</spring-cloud-finchley.version>
        <spring-cloud-finchley-spring-boot.version>${spring-boot-2-0-x.version}</spring-cloud-finchley-spring-boot.version>
        <!-- spring cloud edgware version -->
        <spring-cloud-edgware.version>Edgware.SR6</spring-cloud-edgware.version>
        <spring-cloud-edgware-spring-boot.version>${spring-boot-1-5-x.version}</spring-cloud-edgware-spring-boot.version>
    </properties>

    <modules>
        <module>spring-boot</module>
        <module>spring-cloud</module>
        <module>spring-data</module>
        <module>spring-framework</module>
    </modules>

</project>
